<%= form_for @product do |f| %>
	<p>
		<%= f.label :category_id %>
		<%= f.collection_select :category_id, Category.all, :id,:name %> 
	</p>
	<p> 
		<%= f.label :name %> 
		<%= f.text_field :name %>  
	</p>
	<p>
		<%= f.label :price %> 
		<%= f.text_field :price %> 
	</p>
	<p>
		<%= f.label :description %> 
		<%= f.text_area :description%> 
	</p>
	<p><%= f.submit "Submit" %> </p>
<% end %> 